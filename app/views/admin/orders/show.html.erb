<h1>order information</h1>

<div class="col-sm-3">
<h2>order status:</h2>
<h4><%=@order.status %></h4>
</div>

<div class="col-sm-3">
<h2>date ordered:</h2>
<h4><%= @order.created_at.to_date %></h4>
<h4><%= @order.created_at.strftime("%I:%M %p") %></h4>
</div>

<div class="col-sm-3">
<h2>ordered by:</h2>
<h6>name:</h6> <h5><%= @order.user.full_name %></h5>
<h6>email:</h6> <h5><%= @order.user.email %></h5>
</div>

<div class="col-sm-3">
<h2>food ordered: </h2>

<% @order.order_items.each do |order_item| %>
  <h4><%= link_to "#{order_item.item.title}", item_path(order_item.item) %></h4>
  <ul>
    <li>price: <%= number_to_currency order_item.item.price %></li>
    <li>amount:  <%= order_item.quantity %></li>
    <li>subtotal: <%= number_to_currency order_item.total_price %></li>
  </ul>
<% end %>

<h4 style="text-align: right;">| total: <%= number_to_currency @order.total_price %> |</h4>
</div>
