<div class="form-horizontal">
 <%= form_for([:admin, @item]) do |f| %>
 <div class="field form-group">
   <%= f.label :title, "title", class: 'col-sm-2 control-label' %>
   <div class="col-sm-3">
     <%= f.text_field :title, class: 'form-control' %>
   </div>
 </div>

 <div class="field form-group">
   <%= f.label :description, "description", class: 'col-sm-2 control-label' %>
   <div class="col-sm-3">
     <%= f.text_field :description, class: 'form-control' %>
   </div>
 </div>

 <div class="field form-group">
   <%= f.label :price, "price", class: 'col-sm-2 control-label' %>
   <div class="col-sm-3">
     <%= f.text_field :price, class: 'form-control' %>
   </div>
 </div>

 <div class="field form-group">
   <%= f.label :image, "upload an image", class: 'col-sm-2 control-label' %>
   <div class="col-sm-3">
     <%= f.file_field :image, class: 'form-control' %>
   </div>
 </div>

 <div class="actions form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <%= f.submit "add item", class: "btn btn-default" %>
   </div>
 </div>
<% end %>
</div>
