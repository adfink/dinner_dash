
<h1>update <%= @item.title %> :</h1>

<%= form_for([:admin, @item]) do |f| %>
  <%= f.label :title, "title" %>
  <%= f.text_field :title, placeholder: @item.title %><br>
  <%= f.label :description, "description" %>
  <%= f.text_field :description, placeholder: @item.description %><br>
  <%= f.label :price, "price" %>
  <%= f.text_field :price, placeholder: @item.price %><br>
  <% Category.all.each do |category| %>
    <%= f.label :category, category.name %>
    <%= check_box_tag 'category[ids][]', category.id, @item.part_of?(category), :id => category.id %><br>
  <% end %>
  <%= f.label :image, "edit image" %>
  <%= f.file_field :image, placeholder: @item.image.url %><br>
  <%= image_tag @item.image.url %>
  <%= f.submit "update this item"%>
<% end  %>


<%= link_to "back to menu items", admin_items_path %>
