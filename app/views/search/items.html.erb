<h1>results:</h1>

<div class="row text-center">
  <% @items.each do |item| %>
    <div class="col-lg-6 col-sm-6">
      <div class="thumbnail">
        <%= link_to image_tag(item.image.url, height: '120', alt: item.title), item %>
      </div>
        <div class="caption">
          <h3><%= item.title %><h3>
          <%= button_to cart_path(item_id: item.id), class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-plus"></i> add to cart
            <% end %>
          </div><br>
      </div>
      <% end %>
</div>
