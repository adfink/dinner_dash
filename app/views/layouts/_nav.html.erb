<nav class="navbar" role="navigation">

    <div class="navbar-header">
      <a class="navbar-brand special-bigger" href="/">Farm to Table</a>
      <div class="form-inline">
      <%= form_tag search_path, :method => 'get' do %>
        <%= text_field_tag :search, params[:search], class: 'form-control' %>
        <%= submit_tag "search", class: "btn btn-default", :name => nil %>
      <% end %>
    </div>
  </div>

<div>
  <% if current_user %>
  <h1>  <%= link_to "logout", logout_path, method: :delete, class: 'btn btn-hover navbar-btn bigger' %></h1>
  <% if current_user.admin? %>
    <%= link_to admin_user_path(current_user), class: 'btn btn-default navbar-btn' do %>
      <i class="glyphicon glyphicon-user"></i>
    <% end %>
  <% else %>
    <%= link_to profile_path, class: 'btn btn-hover navbar-btn' do %>
      <i class="glyphicon glyphicon-user"></i>
      <% end %>

  <% end %>
  <% else %>
    <%= link_to "login", login_path, class: 'btn btn-hover navbar-btn bigger' %>
  <% end %>
    <%= link_to cart_path, id: 'cart', class: 'btn btn-hover navbar-btn' do %>
      <i class="glyphicon glyphicon-shopping-cart"></i>
    <% end %>



    </div>

</nav>
