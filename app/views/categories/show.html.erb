<h1 id="menu-title"><%= @category.name %></h1>

<ul>
<% @category.items.each do |item| %>
  <li>
    <h3><%= item.title %></h3><br>
    <%= link_to image_tag(item.photo_url, height: '120', alt: item.title), item %>
    <%= button_to "add to cart", carts_path(item_id: item.id) %>
  </li>
<% end %>
</ul>

<%= link_to "menus", categories_path %>
