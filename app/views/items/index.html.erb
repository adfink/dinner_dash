<h1 id="menu-title">everything</h1>
<h3><%= link_to "menus", categories_path %><h3>

<div class="row text-center">
  <% @items.each do |item| %>
    <div class="col-lg-6 col-sm-6">
      <div class="thumbnail">
        <%= link_to image_tag(item.image.url, alt: item.title, style: "height: 325px;"), item %>
      </div>
      <div class="caption">
        <h3><%= item.title %><h3>
        <%= button_to cart_path(item_id: item.id), class: 'btn btn-default' do %>
          <i class="glyphicon glyphicon-plus"></i> add to cart
        <% end %>
      </div><br>
    </div>
  <% end %>
</div>
